<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical"
tools:context=".ui.home.HomeFragment"
    android:id="@+id/homeFragment"
    android:background="@mipmap/bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="126dp"
        android:layout_height="101dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="33dp"
        android:src="@mipmap/logo"

        />

    <LinearLayout
        android:layout_width="317dp"
        android:layout_height="476dp"
        android:layout_gravity="center"
        android:layout_marginTop="68dp"
        android:background="@drawable/back"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="47dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="152dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"


            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Appuyer pour detecter le médicament"
            android:textColor="#FF9800"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button3"
            android:layout_width="92dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/ocr" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="131dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"

            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Appuyer pour scanner le code barre"
            android:textColor="#FF9800"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button4"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_gravity="center_horizontal"

            android:background="@drawable/scanne"
            android:text="Scanner" />

        <TextView
            android:id="@+id/appSync"
            android:layout_width="95dp"
            android:layout_height="61dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Appuyer pour synchroniser les données"
            android:textColor="#FF9800"
            android:textStyle="italic" />

        <Button
            android:id="@+id/sync"
            android:layout_width="101dp"
            android:layout_height="98dp"
            android:layout_gravity="center_horizontal"

            android:background="@mipmap/cloud_foreground" />

    </LinearLayout>


</LinearLayout>