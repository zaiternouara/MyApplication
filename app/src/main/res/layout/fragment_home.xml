<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical"
tools:context=".ui.home.HomeFragment"
    android:id="@+id/homeFragment"
    android:background="@mipmap/bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="126dp"
        android:layout_height="101dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="33dp"
        android:src="@mipmap/logo"

        />

    <LinearLayout
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/back"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="47dp">

        <Button
            android:id="@+id/button3"
            android:layout_width="107dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"

            android:background="@drawable/ocrr" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="152dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginBottom="35dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Appuyer pour detecter le médicament"
            android:textColor="#AD000000"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button4"
            android:layout_width="107dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"

            android:background="@drawable/scan"
            android:text="Scanner" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="131dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"


            android:fontFamily="sans-serif-condensed-medium"
            android:gravity="center"
            android:text="Appuyer pour scanner le code barre"
            android:textColor="#AD000000"
            android:textStyle="italic" />

        <Button
            android:id="@+id/sync"
            android:layout_width="107dp"
            android:layout_height="60dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/synch" />

        <TextView
            android:id="@+id/appSync"
            android:layout_width="95dp"
            android:layout_height="61dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:fontFamily="sans-serif-condensed-medium"

            android:gravity="center"
            android:text="Appuyer pour synchroniser les données"
            android:textColor="#AD000000"
            android:textStyle="italic" />

    </LinearLayout>


</LinearLayout>