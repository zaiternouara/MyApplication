<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.afficherTous.afficher_details"
    android:id="@+id/afficherDetails">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:id="@+id/text_view_Prix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_alignParentRight="true" />
        <TextView
            android:id="@+id/text_view_NomC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MÃ©dicament"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_toStartOf="@id/text_view_Prix"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/text_view_Prix" />

        <TextView
            android:id="@+id/text_view_Class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_NomC"
            android:text="classe" />

        <TextView
            android:id="@+id/text_view_Labo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_Class"
            android:text="lab"/>
        <TextView
            android:id="@+id/text_view_Lot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_Labo"
            android:text="Lot"/>
        <TextView
            android:id="@+id/text_view_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_Lot"
            android:text="form"/>
        <TextView
            android:id="@+id/textViewDure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_form"
            android:text="duree"/>
        <TextView
            android:id="@+id/text_view_dateF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewDure"
            android:text="dateF"/>
        <TextView
            android:id="@+id/text_view_dateP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_dateF"
            android:text="dateP"/>
        <TextView
            android:id="@+id/text_view_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_dateP"
            android:text="description"/>
        <TextView
            android:id="@+id/text_view_quant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_desc"
            android:text="quantite"/>
        <TextView
            android:id="@+id/text_view_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_quant"
            android:text="code"/>

    </RelativeLayout>

</FrameLayout>