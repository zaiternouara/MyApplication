<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg"
    tools:context=".ui.afficher.NotificationsFragment"
    android:id="@+id/afficher"
    >


    <TextView
        android:id="@+id/Nosmedoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:shadowColor="#FF0000"
        android:shadowDx="2.8"
        android:shadowDy="2.8"
        android:shadowRadius="2"
        android:text="Nos Médicaments"
        android:textAllCaps="true"
        android:textColor="#FFC800"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="126dp"
        android:layout_height="101dp"
        android:src="@mipmap/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.178"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />


    <LinearLayout
        android:id="@+id/ln"
        android:layout_width="395dp"
        android:layout_height="519dp"
android:paddingBottom="10dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Nosmedoc"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputRecherche"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/button"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:hint="Tapez votre médicament"
                    android:inputType="textPersonName"

                    android:paddingRight="12dp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="45dp"
                    android:layout_height="34dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:background="@drawable/editrech"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21sp"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif"
            android:shadowColor="#FF0000"
            android:shadowDx="2.8"
            android:shadowDy="2.8"
            android:shadowRadius="2"
            android:text="Afficher les médicaments :"
            android:textAllCaps="true"
            android:textColor="#FFC800"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button5"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginBottom="12dp"
            android:background="@drawable/button"
            android:drawableBottom="@drawable/affichert"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:text="Tous les médicaments"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/pLabo"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:background="@drawable/button"
            android:drawableBottom="@drawable/laborat"
            android:gravity="center"
            android:text="Par laboratoire"
            android:textColor="@color/black"

            />

        <Button
            android:id="@+id/expire"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="20dp"
            android:background="@drawable/button"
            android:drawableBottom="@drawable/recyclage"
            android:gravity="center"
            android:text="A recycler"
            android:textColor="@color/black" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>